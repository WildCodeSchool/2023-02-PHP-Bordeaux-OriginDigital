{% extends 'base.html.twig' %}

{% block title %}{{ video.title }}{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center">
        <h1 class="text-center mt-2 width-75" style="margin-top:100px">{{ video.title }}</h1>
    </div>
{% if app.user is empty and video.isPremium is not empty %}
    <div class="d-flex justify-content-center">
        <video class="notPremiumVideoBlurred selectedVideo align-items-center" src="/assets/videos/{{ video.videoLink }}" width="60%"></video>

        <div class="position-absolute d-flex justify-content-center flex-column align-items-center" id="notPremiumVideoText" style="margin-top: 50px">
            <svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="currentColor" class="bi bi-shield-lock-fill m-5" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.777 11.777 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7.159 7.159 0 0 0 1.048-.625 11.775 11.775 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.541 1.541 0 0 0-1.044-1.263 62.467 62.467 0 0 0-2.887-.87C9.843.266 8.69 0 8 0zm0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5z"/>
            </svg>

            <h2 class="contentReservedText text-center">Contenu réservé aux abonnements Premium</h2>

            <div class="d-flex justify-content-center">
                <h2 class="contentReservedLink text-center"><a href="/register">Deviens PREMIUM maintenant!</a></h2>
            </div>
        </div>
    </div>

    {% else %}

    <div class="d-flex justify-content-center">
        <video src="/videos/{{ video.videoLink }}" controls width="90%"></video>
    </div>
    {% endif %}
    <div class="divUnderVideo d-flex flex-column">
        <div class="separationBarShowVideo align-self-center"></div>

        <div class="textBlockUnderVideo">
            <h2 class="mt-2 w-75"><b>{{ video.title }}</b></h2>
            <p class="mt-2 w-75"><b>Publié le:</b> {# videos.createdAt #}</p>
            <p class="mt-2 w-75"><b>Description:</b> {{ video.description }}</p>
            <p class="mt-2 w-75"><b>Categorie: </b>{# videos.categorie.name #}</p>
        </div>

        <div class="separationBarShowVideo align-self-center"></div>

        <div class="textBlockUnderVideo">
            <h3>Voir plus</h3>
            {% include '_includes/showVideoPageCarousel.html.twig' %}
        </div>

    </div>





{% endblock %}
