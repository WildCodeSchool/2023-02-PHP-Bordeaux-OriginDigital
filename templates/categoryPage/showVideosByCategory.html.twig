{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    {% include ('_includes/_cookie.html.twig') %}


<div class="ws-home-carousel-container mb-5">
    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>

        {% if category.name == "Basketball" %}
            {% include ('categoryPage/_includes/categoryBasketball.html.twig') %}
        {% elseif category.name == "Football" %}
            {% include ('categoryPage/_includes/categoryFootball.html.twig') %}
        {% elseif category.name == "Surf" %}
            {% include ('categoryPage/_includes/categorySurf.html.twig') %}
        {% elseif category.name =="Tennis" %}
            {% include ('categoryPage/_includes/categoryTennis.html.twig') %}
        {% elseif category.name == "Volleyball" %}
            {% include ('categoryPage/_includes/categoryVolleyball.html.twig') %}
        {% endif %}

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        {% for video in video.data %}
            {% if app.user is empty and video.isPremium is not empty %}
                <div class="col">
                    <a href="/video/{{ video.id }}"> <div class="card border-0 rounded-0 h-100 text-decoration-none" style="background-color: var(--secondary-color); color:white">
                        <div class="d-flex justify-content-center align-items-center mb-1">
                        <video src="/videos/{{ video.videoLink }}" class="card-img-top notPremiumVideoBlurred" style="max-height: 183px"></video>
                        <svg xmlns="http://www.w3.org/2000/svg" width=50" height="50" fill="currentColor" class="position-absolute bi bi-shield-lock-fill m-5" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.777 11.777 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7.159 7.159 0 0 0 1.048-.625 11.775 11.775 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.541 1.541 0 0 0-1.044-1.263 62.467 62.467 0 0 0-2.887-.87C9.843.266 8.69 0 8 0zm0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5z"></path>
                        </svg>
                        </div>
                        <div class="card-body mb-5">
                            <h5 class="card-title text-decoration-none" style="color: white">{{ video.title }}</h5>
                            <p class="card-text videoDescriptionOverflow text-decoration-none" >{{ video.description }}</p>
                        </div>
                    </div> </a>
                </div>
            {% else %}
            <div class="col d-grid">
                <div class="position-absolute" style="z-index: 99; justify-self: center; margin-top:10px; margin-left: 290px">
                    <a href="{{ path('app_like_video', {'id': video.id}) }}" class="like-dislike" data-video-id="{{ video.id }}">
                        {% if app.user %}
                        {% if video in app.user.likes %}
                                <i class="fa fa-star yellow-star-like" aria-hidden="true"></i>
                            {% else %}
                                <i class="fa fa-star white-star-like" aria-hidden="true"></i>
                            {% endif %}
                            {% endif %}
                    </a>
                </div>
                <a class="ws-videoTitleColor" href="/video/{{ video.id }}"><div class="card border-0 rounded-0 h-100 text-decoration-none" style="background-color: var(--secondary-color)">
                <video src="/videos/{{ video.videoLink }}" class="card-img-top mb-1" style="max-height: 183px"></video>
                <div class="card-body">
                    <h5 class="videoTitleColor card-title text-decoration-none" style="color: white">{{ video.title }}</h5>
                    <p class="videoTitleColor card-text text-decoration-none">{{ video.description }}</p>
                </div>
            </div></a>
            </div>
        {% endif %}
        {% endfor %}
        {% set path = 'app_category' %}
        {% set pages = video.pages %}
        {% set currentPage = video.page %}
    </div>

    <div class="mt-4 mb-3 mx-md-3">
        {% include ('_includes/pagination.html.twig') %}
    </div>

{% endblock %}
