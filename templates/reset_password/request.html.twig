{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock %}

{% block body %}
    <div class="img-fluid ws-custom-login-bg-image">
        <section class="container d-flex justify-content-center">
            <div class="ws-custom-login-bg" style="width: 80vh;margin-top: 120px;margin-bottom: 100px">
                <div class="my-5 mx-5">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    <h1 class="text-center h3 mb-4 font-weight-normal" >Mot de passe oublié</h1>

                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div class="text-center mt-4">
                        <p>
                            Veuillez saisir votre adresse e-mail. Nous vous enverrons
                            le lien destiné à la modification de votre mot de passe.
                        </p>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary mt-5 mb-3 rounded-0">Réinitialiser mon mot de passe</button>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
